{% extends 'base.html.twig' %}
{% block title %}Department Show{% endblock %}
{% block body %}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">
            <i class="fa fa-gears fa-fw"></i>Department
            <a href="{{ path('department_index') }}"><button class="btn btn-warning btn-sm pull-right" >Back</button></a>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
<div class="col-lg-12 sp-list">
    <div class="row" id="scroll">
        <div class="panel panel-default">
            <div class="panel-heading">
                View Department Details
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="scroll">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-responsive">
                            <tr>
                                <td width="15%">Name</td>
                                <td>{{ department.name }}</td>
                            </tr>
                            <tr>
                                <td width="15%">Email</td>
                                <td>{{ department.email }}</td>
                            </tr>
                            <tr>
                                <td width="15%">Created</td>
                                <td>{% if department.created %}{{ department.created|time_ago()|capitalize }}{% else %}{{ "-" }}{% endif %}</td>
                            </tr>
                            <tr>
                                <td width="15%">Modified</td>
                                <td>{% if department.modified %}{{ department.modified|time_ago()|capitalize }}{% else %}{{ "-" }}{% endif %}</td>
                            </tr>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <!--paginations-->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.row -->
    </div>
</div>
{% endblock %}
